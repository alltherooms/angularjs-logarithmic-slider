// colors
$red = #D8483A
$gray =  #C7C7C7
$black = #8D8D8D
$white = #fff

$color1 = #5b677a
$color2 = #fff

.log-slider{
  display: block;
  margin: 0 0 10px;
  padding-top: 13px;
  .sel-bub{
    color: $color1;
    text-align: center;
    font-size: 15px;
    font-family: sans-serif;
  }
  .bub-holder{
    overflow: hidden;
    div{
      color: $color1;
      font-size: 15px;
      font-family: sans-serif;
    }
    .flr-bub{
      float: left;
    }
    .ceil-bub{
      float: right;
    }
  }
  .full-bar{
    position: absolute;
    top: 7px;
    overflow: hidden;
    box-sizing: border-box;
    width: 100%;
    height: 6px;
    border: 2px solid $gray;
    background: $black;
    .sel-bar{
      position: absolute;
      height: 100%;
      background: $red
    }
  }
  .point-holder{
    position: relative;
    margin-right: 24px;
    div{
      position: absolute;
      margin-top: -2px;
      width: 24px;
      height: 24px;
      border: 1px solid $gray;
      border-radius: 50%;
      background-color: $color2;
      cursor: pointer;
      &:after{
        position: absolute;
        display: block;
        width: 100%;
        height: 100%;
        text-indent: 4px;
        letter-spacing: -2.5px;
        font-size: 11px;
        line-height: 20px;
      }
      &:hover{
        background-color: $gray;
      }
      &.active{
        background-color: $red;
        &:after{
          color: $white;
        }
      }
    }
  }
  .bar-holder{
    position: relative;
    height: 20px;
    &:before{
      position: absolute;
      left: 50%;
      display: block;
      width: 1px;
      height: 100%;
      background-color: $black;
      content: "";
    }
  }
}